{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",   // Add this option for proper node module resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"   // Make sure compiled JS files are outputted here
  },
  "include": ["src/**/*"],  // Ensure all files in src are included
  "exclude": ["node_modules"]  // Exclude node_modules folder to avoid unnecessary compilation
}
